<div id="sidebar">
	
	<% if authenticated? %>
	
	<div class="fb-login-button">
		<fb:profile-pic uid="<%= current_user.try(:identifier) %>" size="normal" facebook-logo="true"></fb:profile-pic>
	</div>
	<p>
		<%= link_to "Logout", facebook_path, :method => :delete %>
	</p>
	<% else %>
	
	<dl>

		<dd>
			<fb:login-button length="long" onlogin="location.href='<%= new_facebook_path %>'" scope="<%= Facebook.config[:scope] %>"></fb:login-button>
		</dd>

	</dl>
	<% end %>

	<div class="fb-like" data-href="https://www.facebook.com/pages/GPL/161206227381714?ref=hl&amp;bookmark_t=page" data-send="true" data-width="450" data-show-faces="true"></div>
</div>




